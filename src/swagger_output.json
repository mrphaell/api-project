{
  "openapi": "3.0.0",
  "info": {
    "version": "v1.0.0",
    "title": "Pantore Test API",
    "description": "Pantore Pay Test API"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local server"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "tags": [
          "Default"
        ],
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/user/": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "Endpoint para listar usuários.",
        "parameters": [
          {
            "name": "filter",
            "description": "Parâmetro de busca opcional.",
            "required": false,
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuários listados com sucesso."
          },
          "400": {
            "description": "Erro ao listar usuários."
          }
        }
      },
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Endpoint para criar usuário.",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddUser"
              }
            }
          },
          "description": "Dados do usuário a ser criado."
        }
      }
    },
    "/user/{id}": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "Endpoint para buscar usuário pelo ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID do usuário."
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário listado com sucesso."
          },
          "400": {
            "description": "Erro ao listar usuário."
          }
        }
      },
      "put": {
        "tags": [
          "Users"
        ],
        "description": "Endpoint para atualizar usuário.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID do usuário."
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUser"
              }
            }
          },
          "description": "Dados do usuário a ser criado."
        }
      },
      "delete": {
        "tags": [
          "Users"
        ],
        "description": "Endpoint para excluir usuário pelo ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID do usuário."
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário excluído com sucesso."
          },
          "400": {
            "description": "Erro ao excluir usuário."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "example": "Juca Silva"
          },
          "email": {
            "type": "string",
            "example": "juca.silva@gmail.com"
          },
          "funcao": {
            "type": "string",
            "example": "cliente"
          }
        }
      },
      "AddUser": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "example": "Juca Silva"
          },
          "email": {
            "type": "string",
            "example": "juca.silva@email.com"
          },
          "senha": {
            "type": "string",
            "example": "123456"
          },
          "funcao": {
            "type": "string",
            "example": "cliente"
          }
        },
        "required": [
          "nome",
          "email",
          "senha",
          "funcao"
        ]
      },
      "UpdateUser": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "example": "Juca Silva"
          },
          "email": {
            "type": "string",
            "example": "juca.silva@email.com"
          },
          "funcao": {
            "type": "string",
            "example": "cliente"
          }
        },
        "required": [
          "nome",
          "email",
          "funcao"
        ]
      }
    }
  }
}